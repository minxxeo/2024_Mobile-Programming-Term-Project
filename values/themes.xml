<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealTea" parent="Theme.Material3.DayNight" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Button color customization -->
        <item name="buttonStyle">@style/Widget.HealTea.Button</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HealTea.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HealTea.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HealTea.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.HealTea.Fullscreen" parent="Theme.HealTea">
        <item name="android:actionBarStyle">@style/Widget.Theme.HealTea.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.HealTea.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!-- Button style customization -->
    <style name="Widget.HealTea.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item> <!-- 추가 -->
        <item name="android:textColor">@color/black</item> <!-- 수정 -->
    </style>




    <style name="BottomNavThem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

</resources>
