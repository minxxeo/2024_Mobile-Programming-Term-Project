<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDE59"
    tools:context=".MainActivity2">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFDE59"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Sun -->
            <Button
                android:id="@+id/sun"
                android:layout_width="48dp"
                android:layout_height="55dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:contentDescription="sun"
                style="@style/Widget.HealTea.Button"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_btn" />

            <TextView
                android:id="@+id/sun_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sun"
                android:layout_alignStart="@id/sun"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:text="일"
                android:textColor="#EC2424" />

            <!-- Mon -->
            <Button
                android:id="@+id/mon"
                android:layout_width="48dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/sun"
                android:background="@drawable/rounded_btn"
                style="@style/Widget.HealTea.Button"
                android:contentDescription="Mon"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/mon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mon"
                android:layout_alignStart="@id/mon"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:text="월"
                android:textColor="@android:color/black" />

            <!-- Tue -->
            <Button
                android:id="@+id/tue"
                android:layout_width="48dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/mon"
                android:background="@drawable/rounded_btn"
                style="@style/Widget.HealTea.Button"
                android:contentDescription="Tue"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tue"
                android:layout_alignStart="@id/tue"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:text="화" />

            <!-- Wed -->
            <Button
                android:id="@+id/wed"
                android:layout_width="48dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/tue"
                android:background="@drawable/rounded_btn"
                style="@style/Widget.HealTea.Button"
                android:contentDescription="Wed"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/wed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wed"
                android:layout_alignStart="@id/wed"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:text="수" />

            <!-- Thu -->
            <Button
                android:id="@+id/thu"
                android:layout_width="48dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/wed"
                android:background="@drawable/rounded_btn"
                style="@style/Widget.HealTea.Button"
                android:contentDescription="Thu"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/thu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thu"
                android:layout_alignStart="@id/thu"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:text="목" />

            <!-- Fri -->
            <Button
                android:id="@+id/fri"
                android:layout_width="48dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/thu"
                android:background="@drawable/rounded_btn"
                style="@style/Widget.HealTea.Button"
                android:contentDescription="Fri"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/fri_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fri"
                android:layout_alignStart="@id/fri"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:text="금" />

            <!-- Sat -->
            <Button
                android:id="@+id/sat"
                android:layout_width="48dp"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/fri"
                android:background="@drawable/rounded_btn"
                style="@style/Widget.HealTea.Button"
                android:contentDescription="Sat"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/sat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sat"
                android:layout_alignStart="@id/sat"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:text="토"
                android:textColor="#0D1AC3" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="370dp"
            android:layout_height="3dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:background="#701F8956" />

        <!-- Moving bar -->
        <View
            android:id="@+id/movingBar"
            android:layout_width="52.9dp"
            android:layout_height="2.8dp"
            android:layout_marginTop="-3.6dp"
            android:layout_marginLeft="18dp"
            android:layout_below="@id/view3"
            android:background="#951F8956" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="건강한 마음 가짐은 건강한 몸을 만든다." />

            <!-- Main Rectangular Button -->

            <RelativeLayout
                android:id="@+id/buttonLayout"
                android:layout_width="395dp"
                android:layout_height="230dp"
                android:layout_below="@id/textView12"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_btn">

                <Button
                    android:id="@+id/rectangularButton"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/Month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="58dp"
                    android:layout_marginTop="27dp"
                    android:text="00."
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/Day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="200dp"
                    android:text="00"
                    android:textSize="45sp"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/Message1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="130dp"
                    android:text="00님! 오늘 하루는 어떠셨나요?"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Message2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Message1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="오늘 하루를 입력해주세요✍🏻"
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </RelativeLayout>

            <!-- EditText for user input -->


        </RelativeLayout>

        <!-- Nutrients -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <View
                android:layout_width="370dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_menu"
                android:backgroundTint="#A1FFC107" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="영양제 챙겨드셨나요?"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="44dp"
                android:text="영양제 챙겨먹기💊"
                android:textSize="25dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <View
                android:layout_width="370dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_menu"
                android:backgroundTint="#A1FFC107" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="️한 줄 기록"
                android:textSize="18dp" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                style="@style/Widget.HealTea.Button"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="35dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="44dp"
                android:text="✏️오늘 하루 당신은"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Message3"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="80dp"

                android:textAlignment="center"
                android:textColor="#50000000"
                android:textSize="15sp" />

        </RelativeLayout>



    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/nav_item" />


</androidx.constraintlayout.widget.ConstraintLayout>
